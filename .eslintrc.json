{
  "env": {
      "es6": true,
      "node": true
  },
  "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "prettier"
  ],
  "rules": {
    "no-console": "warn",
    "prettier/prettier": "error",
    "import/no-unresolved": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ]
  },
  "settings": {
    "import/resolver":{
      "node": {
        "extensions": [".ts", ".tsx"]
      }
    }
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.spec.ts?(x)"],
      "env": {
        "jest": true
      }
    }
  ]
}
